{
  "manifest_version": 3,
  "version": "1.0",
  
  "name": "Lyrics Format Copier",
  "description": "Allows copying of lyrics from lots of websites with one click, without copying ui elements",

  "permissions": ["tabs", "scripting"],
  "host_permissions": ["<all_urls>"],

  "action": {
    "default_popup": "ui/main.html",
    "default_icon": "icon.png"
  },

  "content_scripts": [
    {
      "matches": ["*://genius.com/*-lyrics"],
      "js": ["/parsers/genius_com.js"]
    },

    {
      "matches": ["*://www.azlyrics.com/lyrics/*/*.html"],
      "js": ["/parsers/azlyrics_com.js"]
    },

    {
      "matches": ["*://open.spotify.com/track/*"],
      "js": ["/parsers/spotify_com.js"],
      "run_at": "document_idle"
    }
  ]
}